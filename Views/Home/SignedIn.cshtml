@using Shopaholics.Models

@{
    ViewBag.Title = "SignedIn";
    Layout = "~/Views/Shared/Layout1.cshtml";
}
<body>
    
    <div id="nav">

    </div>

    <div id="aside">
        <form action="http://localhost:12767/Home/SearchItem" method="post">
            
            <input type="search" placeholder="search items here" name="search" style="font-family:'Arial Rounded MT'; font-size:medium; " />
            <span class="glyphicon glyphicon-search" aria-hidden="true" />
            <input type="submit" value="Search" style="width:70px; height:35px ; text-align:center"/>

        </form>
    </div>

    <div id="section">
        <h2>Discount Deals</h2><br />
        <p style="text-align: center;">
            <span style="line-height: 1.3em;">
                Providing wide range of discount offers and deals to avail online daily.
            </span>
        </p>
        <br />

        @foreach (var i in Model)
        {

            <div class="col-md-4">
                <div class="item">
                    <img src="@i.Image" alt="@i.Description" style="width:200px;height:120px;border:0">
                </div>
                <div>
                    <p class="navbar-text">Rs @i.Price | Stock: @i.Stock</p>
                </div>
                <div class="desc">
                    <a href='@Url.Action("Index", "Customer", new { ItemId= @i.Id } )'>
                        <button type="button" class="btn btn-default btn-lg">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">AddToCart</span>
                        </button><br />
                    </a>
                </div>
            </div>
        }
        </div>
    </body>
